extends ../layout

block content
  h1 
    a(href="/teams") 

  h1 タスクの新規作成

    //-   form.box(action=`teams/${team.id}/tasks`, method="post")

  form.box(action=`/teams/${team}/tasks`, method="post")
    _csrf
    
    div
      label(for="title") タイトル
      input#title(name="title")
    div 
      label(for="body") 内容
      textarea#body(name="body")
    div
      label(for="selectAssigneeId") 担当者
      select(name="selectAssigneeId")
        option(value=0) なし
        each member in members
          option(value=member.id) #{member.user.displayName}
    div.actions
      input(type="submit")